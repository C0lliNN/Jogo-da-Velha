
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Slider?>

<AnchorPane fx:id="root" fx:controller="com.raphaelcollin.jogodavelha.Controller" onKeyPressed="#handleRootKeyPressed"
            xmlns:fx="http://javafx.com/fxml">


    <Button fx:id="jogarButton" onAction="#handleIniciarOnAction" disable="true" opacity="0" />

    <HBox fx:id="hboxVelhaImageView" alignment="CENTER" >
        <ImageView fx:id="velhaImageView" opacity="0"/>
    </HBox>


    <ComboBox fx:id="idiomaIconeComboBox" disable="true" opacity="0"/>

    <Button fx:id="audioIconeButton" onAction="#handleAudioButtonClick" onMouseEntered="#handleAudioButtonMouseEntered"
                 onMouseExited="#handleAudioButtonMouseExited" opacity="0"/>

    <Slider fx:id="sliderVolume" orientation="VERTICAL" max="1.0" majorTickUnit="0.1"
            onMouseEntered="#handleSliderVolumeMouseEntered" onMouseExited="#handleSliderVolumeMouseExited"/>


</AnchorPane>